.g-loading-box
  position absolute
  top 0
  right 0
  left 0
  bottom 0
  display flex
  flex-direction column
  justify-content center
  align-items center
  z-index 9999
  background rgba(255, 255, 255, 0)
  &.transparent
    background rgba(255, 255, 255, 0)
@keyframes g-loading-rolling
  0%
    -webkit-transform translate(-50%, -50%) rotate(0deg)
    transform translate(-50%, -50%) rotate(0deg)
  100%
    -webkit-transform translate(-50%, -50%) rotate(360deg)
    transform translate(-50%, -50%) rotate(360deg)
.g-loading-rolling
  flex none
  width 100%
  position relative
  height 180px
.g-loading-rolling div, .g-loading-rolling div:after
  position absolute
  width 180px
  height 180px
  border 20px solid #1c90fb
  border-top-color transparent
  border-radius 50%
.g-loading-rolling div
  -webkit-animation g-loading-rolling 0.7s linear infinite
  animation g-loading-rolling 0.7s linear infinite
  top 100px
  left 100px
.g-loading-rolling div:after
  -webkit-transform rotate(90deg)
  transform rotate(90deg)
.g-loading-rolling
  width 100px !important
  height 100px !important
  transform translate(-50px, -50px) scale(0.5) translate(50px, 50px)