.page-wrap
  display flex
  flex-direction column
  box-sizing border-box
  font-weight 400
  position relative
  width 100%
  height 100%
  overflow-x hidden
  background #F6F7F8
  overflow-y auto 
  &.layer
    position absolute
    top 0
    right 0
    width 750px
.bar-search
  flex none
  height 88px
  padding 13px 25px 13px 25px
  background #ffffff
  box-sizing border-box
  display flex
  z-index 1
  .label
    width 100%
    height 62px
    line-height: 62px
    background #F6F7F8
    border-radius 30px
    color #333333
    font-size: 28px
    padding 0 30px
    cursor text
    &.placeholder
      color #A9A9A9
  .icon-search
    font-size 32px
    vertical-align middle
    margin-right 10px