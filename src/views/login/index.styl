// - login
.page-login
	background #ffffff
	.card-login
		padding 88px 40px 0 40px
		overflow-y auto
		h1
			font-size 56px
			font-weight 400
			color #333333
			line-height 84px
		h2
			font-size 36px
			font-weight 400
			color #666666
			line-height 54px
		ul
			margin 95px auto
			li
				position relative
				border-bottom #EAEEF1 1PX solid
				padding 0 60px
				.iconfont
					position absolute
					top 0
					left 0
					line-height 118px
					font-size 28px
					color #888888
					&.showPwd
						right 0
						left auto
						width 28px
						z-index 2
				.tips
					position absolute
					right 60px
					left 60px
					bottom 0
					line-height 32px
					color #FF3030
					font-size 20px
				.inpt-account, .inpt-pwd
					width 100%
					padding 29px 0
					height 118px
					line-height 60px
					font-size 32px
					letter-spacing 1PX
					box-sizing border-box
					border none
					background #ffffff
				&.action
					padding 90px 0 0 0
					.btn-login
						width 100%
						height 98px
						line-height 98px
						background: none
						border none
						background-color #007AFF
						border-radius 6PX
						font-size 36px
						font-weight 500
						color #ffffff
						&[disable]
							background-color #99CAFF
