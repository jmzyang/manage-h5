// 页面切换效果
.app-forward, .app-backward
	transition all 0.3s ease-in-out
// 后退
.app-backward-enter, .app-backward-leave-active
	opacity 0
.app-backward-leave-active
	position absolute
	transform translateX(-100%)
// 前进
.app-forward-enter, .app-forward-leave-active
	opacity 0
.app-forward-leave-active
	position absolute
	transform translateX(100%)
// 根节点
.layout-wrap
	height 100%
	width 100%
	overflow hidden
	position relative
	background-color #f5f5f5
	.bar
		position absolute
		right 0
		left 0
		z-index 10
		width 100%
		height 88px
		padding-right 15px
		padding-left 15px
		background-color #ffffff
		-webkit-backface-visibility hidden
		backface-visibility hidden
		&.bar-header
			top 0
			z-index 11
		&.bar-footer
			z-index 11
			bottom 0
			width 100%
			height 98px
			padding 0
			background-color #ffffff
			color #5d5d5d
			box-sizing border-box
			box-shadow 0 0 6PX rgba(0, 0, 0, 0.15)
	.layout-main
		position absolute
		width 100%
		left 0
		right 0
		top 0
		bottom 0
		overflow hidden
		-webkit-overflow-scrolling touch
		&.android
			top 0
	.bar-header ~ .layout-main
		top 88px
	.bar-footer ~ .layout-main
		bottom 98px
/* scroll 布局 */
.scroll-layout
	position relative
	width 100%
	height 100%
	overflow hidden
	box-sizing border-box
	// 工具条
	.bar
		position absolute
		right 0
		left 0
		z-index 10
		width 100%
		height px2rem(88px)
		padding-right px2rem(15px)
		padding-left px2rem(15px)
		background-color #f7f7f8
		-webkit-backface-visibility hidden
		backface-visibility hidden
		&.bar-header
			top 0
		&.bar-footer
			z-index 2
			bottom 0
			width 100%
			height px2rem(98px)
			padding 0
			background-color #ffffff
			color #5d5d5d
			box-sizing border-box
	.scroll-transform
		position absolute
		z-index 2
		-webkit-tap-highlight-color rgba(0, 0, 0, 0)
		width 100%
		transform translateZ(0)
		user-select none
		text-size-adjust none
		-webkit-overflow-scrolling touch
	.scroll-content
		width 100%
		position absolute
		z-index 1
		top 0
		bottom 0
		left 0
		overflow hidden
	.scroll-content .scroll-scroller
		z-index 2
	.bar-header ~ .scroll-content
		top px2rem(88px)
	.bar-footer ~ .scroll-content
		bottom px2rem(98px)
