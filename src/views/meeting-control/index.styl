.meeting-control-container
  width 100%
  height 100%
  display flex
  flex-direction column
  position relative
  font-weight 400
  .control-main
    height 0px
    flex 1
    display flex
    flex-direction column
    background-color #FFFFFF
    position relative
    overflow hidden
    padding 0px
    border none
    .control-header
      flex none
      background url('~@/assets/images/public/myBack.png') no-repeat top center
      background-size 100% 60%
      & > .layout-header
        background none
        color #FFFFFF
        .title,.back
          color @color
        .send-message
          top 0
          font-size 32px
          line-height 88px
          height 88px
          position absolute
          right 15px
      .control-header-main
        background rgba(255,255,255,1)
        box-shadow 0px 8px 32px 0px rgba(0,0,0,0.07)
        border-radius 16px
        padding 40px
        text-align left 
        margin 20px
        font-size 34px
        position relative
        .meeting-title
          font-weight 500
          color rgba(6,108,219,1)
          line-height 54px
          font-size 40px
          word-wrap break-word
        .meeting-count-down
          position absolute
          right 0px
          left auto
          bottom auto
          top auto
          line-height 56px
          background linear-gradient(112deg,rgba(255,127,68,1) 0%,rgba(254,81,73,1) 100%)
          border-radius 29px 0px 0px 29px
          color #FFFFFF
          font-size 30px
          padding 0px 8px 0px 18px
          opacity 0.9
          span 
            margin-left 8px
        .meeting-time
          margin 15px 0px
          color #555555
          text-overflow ellipsis
          overflow hidden
          white-space nowrap
          line-height 52px
          .week
            vertical-align top
            font-size 30px
            color #888888
            margin 0px 25px 0px 5px
        .meeting-attendee
          color #888888
          padding 10px 0px
          text-overflow ellipsis
          overflow hidden
          white-space nowrap
          & > i 
            font-size 26px
            color #888888
            margin-right 10px
    .control-middle
      height 0px
      flex 1
      display flex
      flex-direction column
      position relative
      overflow hidden
      .scroll-content
        flex 1
        overflow hidden
        .scroll-transform
          min-height 100%
          display flex
          flex-direction column
          .navigation
            margin-top 26px
            overflow hidden
            border-bottom 2PX solid #F8F8F8
            font-size 34px
            line-height 51px
            color #666666
            display flex
            line-height 80px
            & > div
              flex 1
              text-align center
            .select-navigation
              color #333333
              font-weight 500
              & > div
                width 40px 
                height 5px
                background-color #007AFF
                border-radius 2px
                margin 0 auto
          .basics-container
            overflow hidden
            .content
              margin 36px 36px 0px 36px
              overflow hidden
              position relative
              .subheading
                text-align left
                color #333333
                font-size 28px
                font-weight 500
                line-height 50px
                span
                  color #007AFF
                  font-size 28px
                  font-weight 500
                  float right
              .subheadingContent
                overflow hidden
                font-size 26px
                line-height 36px
                margin-top 30px
                color #888888
            .issue-box
              margin 0px 36px
              margin-top 50px
              .issue-title
                font-size 34px
                font-weight 500
                color #333333
                line-height 50px
          .list-container
            overflow hidden
            .search-input
              line-height 68px
              padding 0 20px
              margin 40px 36px
              background rgba(246,247,248,1)
              border-radius 30px
              cursor text
              span 
                vertical-align middle
                color #A9A9A9
                font-size 28px
                margin-left 12px
              .icon-search
                font-size 32px
                color #A9A9A9
                vertical-align  middle
            .meeting-room-list
              margin 0px 36px
              flex 1
              overflow hidden
              display flex
              flex-direction column
              position relative
              .noDataTips
                font-size 32px
                line-height 120px
                text-align center
                display block
                color #888
              .meeting-cintril-list
                margin 20px 0px
                border-radius 16px
                border 2PX solid rgba(235,235,235,1)
                background-color #FDFDFD
                padding 40px 30px
                overflow hidden
                position relative
                .delete-room
                  position absolute
                  top 10px 
                  right 10px 
                  width 40px
                  height 40px
                  line-height 1.3
                  text-align center
                  i
                    font-size 16px
                    font-weight bold
                    color #979797
                .chairman-room
                  width 140px
                  height 80px
                  position absolute
                  top -30px 
                  left -65px 
                  background-color #FE5E57
                  color #FFFFFF
                  padding 4px
                  font-size 22px
                  font-weight 500
                  line-height 30px
                  transform rotate(132deg)
                  text-align center
                  span
                    display inline-block
                    transform rotate(230deg)
                .list-title
                  font-weight 500
                  color #333333
                  line-height 48px
                  font-size 32px
                  padding 0px 14px
                .list-contril
                  display flex
                  & > div
                    flex 1
                    text-align center
                    position relative
                    padding 23px 0px
                    & > button
                      display inline-block
                      width 70px
                      height 70px
                      line-height 70px
                      background-color #F6F6F9
                      border-radius 4px
                      vertical-align middle
                      border none
                      overflow hidden
                      padding 0px
                      top calc(50% - 32px)
                      i
                        font-size 28px
                        color #9B9B9B
                        font-weight bold
                      .red
                        color #FF506B
                      .blue
                        color #007AFF
                      .green
                        color #1AB47F
                    & > i
                      position absolute
                      top -36px
                      left -8px
                      width 0
                      height 0
                      border-width 48px 48px 48px 0
                      border-style solid
                      border-color transparent #FE5E57 transparent transparent
                      transform rotate(45deg)
                      & > span
                        color #FFFFFF
                        font-size 22px
                        font-weight 500
                        position absolute
                        top -16px
                        left 20px
                        transform rotate(-45deg)
                  & > hr
                    flex none
                    display block
                    height 1PX
    .end-bottom
      flex none
      padding 15px 36px
      box-shadow 0px -4px 13px 0px rgba(100,120,160,0.08)
      z-index 1
      button
        width 100%
        font-size 30px
        font-weight 500
        color #ffffff
        background-color #007AFF
    .control-bottom
      height 168px
      display flex
      color #333333
      font-size 22px
      z-index 2
      & > div
        flex 1
        text-align center
        & > span 
          line-height 30px
        & > button
          width 70px
          height 70px
          line-height 70px
          background #007AFF
          box-shadow 2px 6px 10px 0px rgba(72,134,255,0.36)
          border none
          border-radius 50%
          margin 0 auto
          margin-top 40px
          margin-bottom 6px
          display block
          i
            font-size 32px
            color #FFFFFF
            font-weight bold
      & > div:last-child
        & > button
          background linear-gradient(145deg, rgba(255, 156, 112, 1) 0%, rgba(229, 55, 55, 1) 100%)
          box-shadow 0px 5px 9px 0px rgba(255, 80, 107, 0.34)
    .meeting-volume-slider
      position absolute
      bottom 160px
      left calc(50% - 190px)
      width 355px
      padding 40px 30px
      background rgba(255, 255, 255, 1)
      box-shadow 0px 5px 16px 0px rgba(0, 0, 0, 0.15)
      border-radius 6px
      z-index 3
      &:before
        content ''
        width 0
        border-top 20px solid #fff
        border-bottom 20px solid #fff0
        border-left 20px solid #fff0
        border-right 20px solid #fff0
        position absolute
        bottom -40px
        left calc(50% - 10px)
  .issue-edit-box
    flex 1
    flex-direction column
    background-color #F6F7F8
