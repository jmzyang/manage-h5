// - 组件样式
.scroll-layout
	background #f7f7f7
.chat
	.item
		display flex
		padding 0 150px 0 0
		margin 30px 0
		&.my
			padding 0 0 0 150px
			.con-wrap
				text-align right
				.content
					background linear-gradient(to right, #cf648e, #7d4390)
					color #ffffff
		.user
			flex none
			width 90px
			margin 0 30px
			.avatar
				width 270px
				height 270px
				border-radius 50%
				background #ffffff
				margin-bottom 20px
				img
					width 270px
					height 270px
					border-radius 50%
			.time
				color $gray
				font-size 18px
				text-align center
		.con-wrap
			flex 1
			text-align left
			.content
				margin-bottom: 30px
				display inline-block
				width auto
				max-width 100%
				border-radius 30px 10px 30px 10px
				background #ffffff
				padding 20px 30px
				line-height 160%
				font-size 28px
				user-select auto
				box-shadow 0 0 10px rgba(0, 0, 0, .15)
				text-align: left 
.input-message
	width 715px
	display block
	height 60px
	line-height 28px
	padding: 16px 30px
	border none
	margin 15px
	font-size 28px
	box-sizing border-box
	overflow hidden
	background: rgba(0, 0, 0, .05)
	flex 1
	border-radius: 30px