.notice-container
  height 100%
  width 100%
  display flex
  flex-direction column
  overflow hidden
  .container-title
    span
      color #007AFF
      position absolute
      left 0px
      font-size 32px
      font-weight 400
  .notice-box
    flex 1
    display flex
    flex-direction column
    overflow hidden
    background-color #FFFFFF
    font-weight 400
    .scroll-content
        flex 1
        overflow hidden
        .scroll-transform
          min-height 100%
          display flex
          flex-direction column
          .title
            flex none
            font-size 36px
            line-height 46px
            font-weight 500
            padding 50px 40px 40px 40px
            border-top 1PX solid #E4E4E3
            border-bottom 1PX solid #E4E4E3
            color #066CDB
          .main
            flex 1
            padding 0px 40px
            font-size 32px
            .type
              padding 55px 0px
              & > span
                color #333333
                line-height 48px
              .van-radio-group
                margin-top 24px
                display flex
                font-size 28px
                color #666666
                line-height 40px
                text-align right
                white-space nowrap
                .van-radio
                  flex 1
                  text-align center
            .notice-info-div
              width 100%
              height 220px
              overflow-y scroll
              color #666666
              border 1PX solid #EDEDEE
              background-color #FDFDFD
              border-radius 4px
              padding 24px 30px
              box-sizing border-box
              outline none
              font-size 32px
              line-height 44px
              user-select text
            .content
              width 100%
              height 220px
              display flex
              border-radius 4px
              textarea
                flex 1
                padding 24px 30px
                color #666666
                font-size 32px
                line-height 44px
                border 1PX solid #EDEDEE
                background-color #FDFDFD
                resize none
            .attendee-box
              width 100%
              margin 60px 0px
              .attendee-title
                display flex
                & > div
                  flex 1
                  color #333333
                  font-size 32px
                  line-height 48px
                  & > span
                    color #B2B2B2
                    font-size 28px
                    line-height 42px
                & > span 
                  flex none
                  color #007AFF
                  font-size 32px
                  line-height 48px
              .attendee-list
                overflow hidden
                .attendee
                  width 20%
                  margin-top 45px
                  float left
                  text-align center
                  .attendee-headPortrait
                    overflow hidden
                    padding-top 5px
                    .selectionAttendee
                      filter grayscale(100%)
                    & > div
                      width 80px
                      margin 0 auto
                      position relative
                      & > i 
                        font-size 28px
                        padding 3px
                        color #21AF92
                        background-color #FFFFFF
                        border-radius 50%
                        position absolute
                        top -6px
                        right -6px
                        display flex
                      .avatar
                        width 80px
                        height 80px
                        line-height 80px
                        background-color #3296FB
                        color #FFFFFF
                        overflow hidden
                        white-space nowrap
                        text-align: center
                        border-radius 50%
                        font-size 28px
                    .attendee-name
                      color #888888
                      font-size 26px
                      line-height 37px
                      width 90%
                      text-overflow ellipsis
                      overflow hidden
                      white-space nowrap
                      margin-top 6px
  .operation
    flex none
    padding 20px 36px
    padding-left 10px
    display flex
    background-color #FFFFFF
    box-shadow 0px -4px 13px 0px rgba(100,120,160,0.08)
    .c-meeting-notice-checkbox-group
      flex 1
      color #666666
      display flex
      line-height 2.5
      white-space nowrap
      .c-meeting-notice-checkbox
        flex 1
        text-align center
        font-size 28px
        padding 5px 0px
        display inline-block
        .van-checkbox__icon
          height auto
          i 
            width 40px
            height 40px
            line-height 40px
            border-radius 20px
    & > button 
      flex none
      width 230px
      height 86px
      background-color #007AFF
      border-radius 2px
      font-size 30px
      border none
      color #FFFFFF
                
            