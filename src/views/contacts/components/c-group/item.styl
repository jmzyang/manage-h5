.contacts-group-item-check-all
  margin 0px
  margin-top 27px
.contacts-group-item-scroll
  margin 0px
  margin-top 27px
  overflow hidden
  flex 1
  .contacts-checkbox-box
    background-color #FFFFFF
  .contacts-item-box
    background-color #FFFFFF
    .contacts-item
      height 110px
      box-sizing border-box
      line-height 110px
      display flex
      border-bottom 1PX solid #F8F8F8
      padding 0 36px
      // 联系人
      .avatar
        flex none
        width 72px
        height 72px
        border-radius 50%
        margin-top: 19px
        margin-right 35px
        background #3296FB
        text-align center
        font-size 28px
        line-height 72px
        color #ffffff
        overflow hidden
        img
          width 72px
          height 72px
          border-radius 50%
      .name
        flex 1
        line-height 110px
        font-weight 400
        color #007AFF
        font-size 32px
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        span
          font-size 30px
          font-weight 400
          color #333333
      .arrow
        flex none
        color #ABABAB
        font-size 12px
        text-align right
        width 80px
        line-height 110px
        
.submit-header
  position absolute
  right 0
  top 0
  display inline-block
  height 62px
  line-height 62px
  font-size 34px
  font-weight 400
  color #007aff