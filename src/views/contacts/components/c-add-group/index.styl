.c-add-grounp-container
  width 100%
  height 100%
  display flex
  flex-direction column
  .font-color
    color #333333 !important
    & > input 
      color #555555 !important
  .c-add-grounp-box
    flex 1
    display flex
    flex-direction column
    height 0px
    background-color #F6F7F8
    font-weight 400
    color #888888
    .add-grounp-head
      flex none
      padding 30px
      background-color #FFFFFF
      .group-item-icon
        width 100px
        height 100px
        background url('~@/assets/images/contacts/group-circle.png') no-repeat 0 0
        background-size 100% 100%
        box-sizing border-box
        margin 0 auto
      .group-item-label
        font-size 32px
        line-height 48px
        height 48px
        margin-top 22px
        text-align center
    .add-grounp-main
      flex 1
      display flex
      flex-direction column
      height 0px
      margin-top 20px
      padding 0px 36px
      background-color #FFFFFF
      .grounp-name
        flex none
        border-bottom 1PX solid #EDEDEE
        display flex
        padding 36px 0px
        & > span 
          flex none
          color #333333
          font-size 32px
          line-height 48px
        & > input 
          flex 1
          border none 
          background-color #FFFFFF
          text-align right
          font-size 28px
          color #B2B2B2
      .grounp-personnel-box
        flex 1
        padding-top 38px
        display flex
        flex-direction column
        height 0px
        .personnel-head-box
          flex none
          display flex
          margin-bottom 20px
          & > span 
            flex none
            color #333333
            line-height 48px
            font-size 32px
          & > span:last-child
            flex 1
            color #B2B2B2
            font-size 28px
            line-height 48px
            text-align right
        .personnel-list-box
          flex 1
          display flex
          flex-direction column
          overflow hidden
          height 0px
          .scroll-content
            flex 1
            overflow hidden
            .scroll-transform
              min-height 100%
              .personnel-list
                width 18%
                margin 15px 1%
                display inline-block
                text-align center
                vertical-align top
                .group-item-icon
                  display inline-block
                  background #3296FB
                  border-radius 50%
                  text-align center
                  position relative 
                  width 80px
                  height 80px
                  box-sizing content-box
                  .delete-personnel
                    color #C8C9CB
                    font-size 28px
                    position absolute
                    right 0px
                  & > span
                    color #FFFFFF
                    white-space nowrap
                    font-size 28px
                    position absolute
                    top 50%
                    left 50%
                    transform translate(-50%,-50%)
                  & > img 
                    width 100%
                    height 100%
                .add-group,
                .delet-group
                  background-color #FFFFFF
                  & > i 
                    color #1890FF
                    font-size 80px
                .group-item-label
                  text-overflow ellipsis
                  overflow hidden
                  white-space nowrap
                  font-size 26px
                  line-height 37px
                  padding 5px 0px
                
      .grounp-submit-box
        flex none
        padding 16px 0px
        & > button
          width 100%
          height 86px
          line-height 86px
          background #007AFF
          font-size 30px
          font-weight 400
          color #FFFFFF
          box-sizing border-box
          border none
  .c-select-organization-box
    flex 1
    display flex
    flex-direction column
    height 0px
    background-color #F6F7F8