.my-info-editing
  padding 20px 36px
  width 100%
  height 100%
  background-color #FFFFFF
  border-top 1px solid #F0F4F6
  .formItem
    position relative
    border-bottom 1px solid #F0F4F6
    height 120px
    line-height 120px
    .formTitle
      position absolute
      height 100%
      left 0
      top 0
      line-height 120px
      font-size 30px
      color #333333
    .tips
      display block
      height 100%
      text-align right
      color #888888
      font-size 30px
      width 100%
      box-sizing border-box
      padding-left 200px
    .avatar
      width 80px
      height 80px
      line-height 80px
      font-size 24px
      text-align center
      background rgba(0,122,255,1)
      color #fff
      float right
      border-radius 40px
      overflow hidden
      margin-top 20px
      img
        width 80px
        height 80px
        border-radius 50%
    img
      width 80px
      height 80px
      float right
      border-radius 40px