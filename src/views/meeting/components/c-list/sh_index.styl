.meeting-list-box
  flex 1
  display flex
  flex-direction column
  .nav
    flex none
    line-height 80px
    text-align center
    display flex
    box-shadow 0PX 4PX 10PX 0PX #6478A00D
    position relative
    div
      flex 1
      color #666666
      font-size 28px
    .targetNav
      color #333333
      font-size 30px
      p
        height 5px
        background-color #007AFF
        width 45px
        margin 0 auto
  .empty
    flex 1
    text-align center
    color #333333
    font-size 42px
    font-weight 400
    position relative
    .empty-container
      height 50%
      width 100%
      text-align center
      position absolute
      top 40%
      transform translateY(-50%)
      img 
        width auto
        max-width 80%
        height 70%
      .empty-content
        line-height 50px
        height 100px
        p
          color #A9A9A9
          font-size 32px
          font-weight 400
          margin-top 20px
  .listContent
    height 0px
    flex 1
    display flex
    position relative
    overflow hidden
    flex-direction column
    .scroll-content
      flex 1
      overflow hidden
      .scroll-transform
        // 不可以1PX，否则会报错
        // OK,了解！
        min-height calc(100% + 10px)
      .yearList
        margin 0 30px  
        p
          padding 15px 0px
          text-align center
          color #666666
          font-size 35px
        .dayList
          margin-top 15px
          p
            line-height 52px
            display inline-block
            border-top-right-radius 50px
            border-bottom-right-radius 50px
            font-size 28px
            color #666666
          .listMain
            width 100%
            border-top 1PX solid #F0F4F6
            background rgba(255,255,255,1)
            box-shadow 0px 4px 8px 0px rgba(6,36,61,0.15)
            border-radius 8px
            margin-bottom 25px
            .mainHeader
              overflow hidden
              line-height 60px;
              position relative
              padding 20px 30px
              color #999999
              border-bottom 1px solid #E5E5E5
              .headerLeft
                font-size 32px
                color #222222
                float left
                span
                  font-size 22px
                  margin-left 15px
              .headerRight
                float right
                line-height 48px
                letter-spacing 1PX
                padding 6px 18px
                text-align center
                border-radius 24px
                font-size 24px
            .mainContent
              padding 30px
              font-size 32px
              line-height 60px;
              color #333333FF
              letter-spacing 1PX
              text-overflow ellipsis
              overflow hidden
              white-space nowrap
              position relative
              .headerLeft
                font-size 28px
                color #999999
                float left
                span
                  font-size 22px
                  margin-left 15px
              .headerRight
                float right
                line-height 48px
                letter-spacing 1PX
                padding 6px 18px
                text-align center
                border-radius 24px
                font-size 24px
                &.ing 
                    background #FF4D4D
                    color #FFFFFF
                &.unstart 
                    background #2DC888
                    color #FFFFFF
                &.end 
                    background #CCCCCC
                    color #FFFFFF
            .mainBottom
              line-height 60px
              font-size 26px
              color #888888
              padding-left 30px
              span
                display inline-block
              .name
                margin-right 30px;
              i
                color #888888
                font-size 25px
                margin-right 10px
                font-weight bold
          .sign
            background-color #ECECEC