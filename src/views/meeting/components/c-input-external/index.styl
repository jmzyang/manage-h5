.input-external-box
  display flex
  flex 1
  flex-direction column
  box-sizing border-box
  font-weight 400
  position relative
  .input-external-container
    flex 1
    height 0
    padding 20px 20px 0 20px
    display flex
    flex-direction column
    .input-external-main
      flex 1
      height 0
      display flex
      width 100%
      flex-direction column
      .form
        background-color #fff
        border-radius 6px
        margin-bottom 20px
        display flex
        .commit-wrap
          padding 96px 30px 0 30px
          .commit
            height 80px
            background rgba(0,122,255,1)
            box-shadow 0px 3px 8px 0px rgba(72,134,255,0.19),0px 4px 18px 0px rgba(72,134,255,0.19)
            border-radius 2px
            text-align center
            line-height 86px
            color #ffffff
            font-size 30px
            width 148px
        .input-item
          padding 30px 0 26px 30px
          width 0
          &.name,&.phone
            flex-grow 2
          &.email
            flex-grow 3.5
          .tips
            line-height 22px
            color #FF3030
            font-size 22px
            z-index 2
            display block
            height 22px
            padding-top 8px
          .item-title
            color #666666
            font-size 28px
            line-height 66px
          .input
            height 80px
            line-height 80px
            background #F6F7F8
            width 100%
            margin 0
            border none
            outline none
            font-size 26px
            padding 0 30px
      .list-wrap
        height 0
        flex-grow 1
        display flex
        flex-direction column
        .list-title
          height 108px
          line-height 108px
          background-color #ffffff
          font-size 28px
          color #333333
          padding 0 20px
          .list-title-con
            border-bottom 1PX #E1E8EB solid
            .clear-choose
              float right
              color #FF506B
        .list
          height 0
          flex-grow 1
          overflow-y auto
          background-color #fff
          box-shadow 0px 4px 11px 0px rgba(54,67,111,0.09)
          border-radius 6px
          padding-left 20px
          .list-item
            border-bottom #E1E8EB 1PX solid
            margin-right 20px
            .van-checkbox
              width 100%
              display flex
              align-items center
              .van-checkbox__label
                flex-grow 1
                width 0
                .check-lable
                  display flex
                  width 100%
                  height 104px
                  align-items center
                  .icon
                    width 66px
                    height 66px
                    border-radius 50%
                  .base-info,.phone,.email,.del
                    width 0
                    text-overflow ellipsis
                    white-space nowrap
                    overflow hidden
                  .base-info
                    padding-left 12px
                    flex-grow 3
                    .name
                      color #333333
                      font-size 28px
                      line-height 40px
                      text-overflow ellipsis
                      white-space nowrap
                      overflow hidden
                    .job
                      color #666666
                      font-size 24px
                      line-height 33px
                      text-overflow ellipsis
                      white-space nowrap
                      overflow hidden
                  .phone
                    color #666666
                    font-size 24px
                    flex-grow 3
                  .email
                    color #666666
                    font-size 24px
                    flex-grow 4
                  .del
                    width 80px
                    height 104px
                    line-height 104px
                    text-align center
                    color #FF506B
                    i.iconfont
                      font-size 32px



