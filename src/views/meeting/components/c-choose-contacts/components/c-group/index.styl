.custom-wrap
  display flex
  flex 1
  overflow hidden
  flex-direction column
  background #F6F7F8
  .btn-wrap
    padding 22px 30px
    background-color #fff
    width 540px
    padding-top 56px
    .btn
      height 80px
      background rgba(0,122,255,1)
      box-shadow 0px 3px 8px 0px rgba(72,134,255,0.19),0px 4px 18px 0px rgba(72,134,255,0.19)
      border-radius 2px
      text-align center
      line-height 86px
      color #ffffff
      font-size 30px
      flex none
  .btn
    height 88px
    background #ffffff
    box-shadow 0px 4px 11px 0px rgba(54,67,111,0.09)
    border-radius 6px
    text-align center
    line-height 86px
    color #007AFF
    font-size 30px
    flex none
    margin-bottom 18px
  .placeholder
    padding-top 120px
    display flex
    flex-direction column
    align-items center
    flex 1
    box-sizing content-box
    background-color #fff
    .placeholder-img
      width 340px
      height 376px
  .custom-group-scroll
    flex 1
    overflow hidden
    .group-card
      background-color #fff
      width 100%
      box-sizing content-box
      margin-bottom 20px