.selected-users-fixed
  position absolute
  top 0px
  left 0px
  right 0px
  bottom 0px
  background-color rgba(0, 0, 0, 0)
  z-index 999
  .selected-users-wrap
    position absolute
    bottom 0
    width 100%
    background-color #ffffff
    height 75%
    display flex
    flex-direction column
    box-shadow 0 -10PX 20PX rgba(0, 0, 0, 0.35)
    .title
      flex none
      height 88px
      background-color #F6F7F8
      line-height 88px
      color #333333
      font-size 28px
      padding-left 44px
      .num
        color #007AFF
      .close
        float right
        width 88px
        height 88px
        margin-right 10px
        font-size 36px
        line-height 88px
        text-align center
    .content-wrap
      flex 1
      overflow-y auto
      .content
        padding 0
        &:after
          content ''
          display block
          clear both
        .selected-list
          .selected-item
            height 110px
            box-sizing border-box
            line-height 110px
            display flex
            border-bottom #EDEDEE 1PX solid
            padding 0 20px
            // 组织机构
            .org-name
              flex 1
              font-size 32px
              font-weight 400
              color #303030
            // 联系人
            .avatar
              flex none
              width 72px
              height 72px
              border-radius 50%
              margin-top: 17px
              margin-right 35px
              background #3296FB
              text-align center
              font-size 28px
              line-height 72px
              color #ffffff
              img
                width 72px
                height 72px
                border-radius 50%
            .name
              flex 1
              margin-top: 17px
              font-weight 400
              color #007AFF
              font-size 32px
              h2
                margin 0
                padding 0
                height 42px
                font-size 30px
                font-weight 400
                color #333333
                line-height 42px
              p
                height 33px
                font-size 24px
                font-weight 400
                color #B2B2B2
                line-height 33px
            .action
              flex none
              width 155px
              text-align center
              font-weight 400
              color #007AFF
              font-size 32px
              &.disable
                color #B2B2B2
    .foot
      flex none
      height 98px
      width 100%
      display flex
      box-sizing border-box
      overflow hidden
      border-top #E1E8EB 1px solid
      box-shadow 0px -3PX 3PX rgba(0, 0, 0, 0.05)
      .concel, .add-group
        width 0
        flex 1
        line-height 98px
        text-align center
        font-size 28px
      .concel
        color #FF506B
        background: #ffffff
        &:active
          background #efefef
      .add-group
        color #fff
        background-color #007AFF
        &:active
          background-color darken(#007AFF, 10%)
