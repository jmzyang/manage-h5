.choose-existing
  display flex
  flex 1
  flex-direction column
  box-sizing border-box
  font-weight 400
  position absolute
  background-color #F6F7F8
  z-index 8
  height 100%
  width 100%
  .back,.sure
    color #007AFF
    font-size 32px
    line-height 60px
  .arrow-left
    font-size 40px
    vertical-align middle
    padding-right 10px
  .room-container
    flex 1
    height 0
    padding 20px 20px 0 20px
    display flex
    flex-direction column
    .room-main
      flex 1
      height 0
      display block
      .contacts-type
        padding-left 20px
        background-color #fff
        box-shadow 0px 4px 11px 0px rgba(54,67,111,0.09)
        border-radius 6px
        margin-bottom 20px
      .list-item
        border-bottom #E1E8EB 1PX solid
        margin-right 20px
        &.search-list-title
          color #333333
          height 90px
          font-size 30px
          font-weight bold
          padding-top 30px
        .van-checkbox
          width 100%
          display flex
          align-items center
          .van-checkbox__label
            flex-grow 1
            width 0
            .check-lable
              display flex
              width 100%
              height 104px
              align-items center
              .icon
                width 66px
                height 66px
                border-radius 50%
              .base-info
                padding-left 12px
                flex-grow 3
                .name
                  color #333333
                  font-size 28px
                  line-height 40px
                  text-overflow ellipsis
                  white-space nowrap
                  overflow hidden
                .job
                  color #666666
                  font-size 24px
                  line-height 33px
                  text-overflow ellipsis
                  white-space nowrap
                  overflow hidden
              .phone
                color #666666
                font-size 24px
                flex-grow 3
              .email
                color #666666
                font-size 24px
                flex-grow 4
              .base-info,.phone,.email
                width 0
                text-overflow ellipsis
                white-space nowrap
                overflow hidden
