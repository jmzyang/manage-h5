.details-sontent-container
  width 100%
  height 100%
  display flex
  flex-direction column
  position relative
  .summary-box,
  .notice-box
    flex 1
    display flex
    flex-direction column
  .jurisdiction-container
    flex 1
    display flex
    flex-direction column
    .jurisdiction-title
      i
        position absolute
        left 0px
        font-size 42px
        color #007AFF
      span
        position absolute
        right 0px
        font-size 30px
        color #666666
      .selectionColor
        color #007AFF
  .van-overlay, .van-popup, .van-actionsheet
    position absolute
  .van-popup
    top 30%
    border-radius 16px
    .title
      line-height 140px
      font-size 36px
      font-weight 500
      color #000
      text-align center
    textarea
      width 640px
      height 348px
      margin 0px 30px 60px 30px
      font-size 32px
      font-weight 400
      color #666666
      padding 30px
      background-color #F6F7F8
      resize none
      border-radius 6px
      border none
    .btn
      display flex
      border-top 1PX solid #E1E8EB
      & > div
        flex none
        width 1PX
        height 67px
        background rgba(225, 232, 235, 1)
        margin-top 17px
      button
        flex 1
        height 106px
        text-align center
        font-size 30px
        font-weight 400
        border none
      & > button:last-child
        color #007AFF
  .empty
    flex 1
    text-align center
    color #333333
    font-size 42px
    font-weight 400
    position relative
    & > .layout-header
      background linear-gradient(286deg,rgba(0,122,255,1) 0%,rgba(102,171,255,1) 100%)
      .details-title
        color #FFFFFF
        i
          position absolute
          left 0px
          right auto
          font-size 44px
        span
          position absolute
          right 0px
          left auto
    .empty-container
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      .empty-img
        width 437px
        height 354px
        background url('~@/assets/images/public/empty.png') no-repeat center center
        background-size 100% 100%
        margin 0 auto
        margin-bottom 22px
      .empty-content
        line-height 50px
        height 100px
        p
          color #A9A9A9
          font-size 32px
          font-weight 400
          margin-top 20px
  .detailsSontent
    flex 1
    display flex
    flex-direction column
    position relative
    overflow hidden
    margin 0
    .details-box
      height 0px
      flex 1
      display flex
      flex-direction column
      background-color #FFFFFF
      position relative
      overflow hidden
      padding 0px
      border none
      .details-header
        flex none
        background url('~@/assets/images/public/myBack.png') no-repeat top center
        background-size 100% 60%
        & > .layout-header
          background none
          color #FFFFFF
          .title,.back
            color @color
          .send-message
            top 0
            font-size 32px
            line-height 88px
            height 88px
            position absolute
            right 15px
        .details-header-main
          background rgba(255,255,255,1)
          box-shadow 0px 8px 32px 0px rgba(0,0,0,0.07)
          border-radius 16px
          padding 40px
          font-weight 400
          text-align left 
          margin 20px
          .meeting-title
            font-weight 500
            color rgba(6,108,219,1)
            line-height 54px
            font-size 40px
            word-wrap break-word
          .meeting-time
            margin 15px 0px
            color #555555
            font-size 34px
            text-overflow ellipsis
            overflow hidden
            white-space nowrap
            line-height 58px
            .type
              color #FFFFFF
              font-size 22px
              font-weight 500
              padding 0px 10px
              background linear-gradient(112deg,rgba(255,127,68,1) 0%,rgba(254,81,73,1) 100%)
              border-radius 4px
              margin-right 20px
              line-height 40px
              display inline-block
              vertical-align text-bottom
            .week
              color #888888
              margin 0px 25px 0px 5px
          .meeting-attendee
            color #888888
            padding 10px 0px
            font-size 30px
            text-overflow ellipsis
            overflow hidden
            white-space nowrap
            & > i 
              font-size 26px
              color #888888
              margin-right 10px
              font-weight bold
            &  > i:last-child
              margin-left 30px
      .details-main
        height 0px
        flex 1
        display flex
        flex-direction column
        position relative
        overflow hidden
        .scroll-content
          flex 1
          overflow hidden
          .scroll-transform
            min-height 100%
            display flex
            flex-direction column
            .container
              min-height 100%
              overflow hidden
              .contentOpen
                height 130px
                .subheadingConten
                  margin-right 120px
                  overflow hidden
                  text-overflow ellipsis
                  white-space nowrap
              .retractAndOpen
                color #007AFF
                font-size 26px
                line-height 60px
                text-align center
                pointer-events none
                & > span
                  width 100%
                  height 100%
                  display inline-block
                  pointer-events all
                  & > i 
                    margin-left 10px
              .retract-open
                position absolute
                top 0px
                width 100%
                height 310px
                background-image linear-gradient(-180deg,rgba(255,255,255,0) 50%,#FDFDFD 80%)
                & > span 
                  height auto
                  width auto
                  position absolute
                  bottom 20px
                  z-index 9
                  left 0px
                  right 0px
              .container-retract
                height 288px
              .content
                margin 20px 36px 0px 36px
                overflow hidden
                position relative
                .subheading
                  font-size 28px
                  font-weight 500
                  color #333333
                  line-height 40px
                .subheadingHidden
                  font-size 26px
                  font-weight 400
                  line-height 40px
                  position absolute
                  opacity 0
                  pointer-events none
                .shrinkContainer
                  color #007AFF
                  padding-left 24px
                  background #ffffff
                  font-size 26px
                  font-weight 400
                  line-height 40px
                  position absolute
                  right 0px
                  bottom 0px
                  i
                    font-size 26px
                    margin-left 6px
                .subheadingContent
                  font-size 26px
                  font-weight 400
                  color #666666
                  line-height 39px
                  .accessCode
                    color #333333FF
                  .topicsContent
                    padding 23px 30px
                    background-color #F6F7F8FF
                    border-radius 3px
                    font-size 26px
                    font-weight 400
                    color #333333FF
                    margin 16px 0px
                    letter-spacing 1px
                    word-break break-all
                    .topicsTitle
                      font-size 32px
                      font-weight 500
                      padding-bottom 20px
                    .losure
                      margin-top 42px
                      display flex
                      line-height 88px
                      .img
                        width 88px
                        height 88px
                        display inline-block
                        background url('~@/assets/images/public/txt.png') no-repeat center center
                        background-size 100% 100%
                      .doc, .DOC, .docx, .DOCX
                        background-image url('~@/assets/images/public/word.png')
                      .jpg, .JPG, .png, .PNG, .gif, .GIF, .bmp, .BMP, .pic, .PIC, .tif, .TIF
                        background-image url('~@/assets/images/public/img.png')
                      .rar, .RAR, .zip, .ZIP, .arj, .ARJ
                        background-image url('~@/assets/images/public/zip.png')
                      .wav, .WAV, .aif, .AIF, .au, .AU, .mp3, .MP3, .mp4, .MP4, .mp5, .MP5, .ram, .RAM, .wma, .WMA, .mmf, .MMF, .amr, .AMR, .aac, .AAC, .flac, .FLAC
                        background-image url('~@/assets/images/public/wav.png')
                      .avi, .AVI, .mpg, .MPG, .mov, .MOV, .swf, .SWF
                        background-image url('~@/assets/images/public/mov.png')
                      .pdf, .PDF
                        background-image url('~@/assets/images/public/pdf.png')
                      .ppt, .PPT
                        background-image url('~@/assets/images/public/ppt.png')
                      .xls, .XLS, .xlsx, .XLSX
                        background-image url('~@/assets/images/public/xls.png')
                      .losureContent
                        flex 1
                        padding 0px 22px
                        line-height 44px
                        width 0px
                        word-wrap break-word
                        & > p:first-child
                          font-weight 600
                          color #333333FF
                        & > p:last-child
                          font-size 24px
                          font-weight 400
                          color #888888FF
                      .download
                        color #007AFFFF
                        font-size 28px
                        font-weight 400
                        i
                          font-size 42px
                          vertical-align sub
                          margin-right 11px
                & > div
                  display flex
                  margin-bottom 20px
                  .roomData
                    flex 1
                    position relative
                    width 0px
                    margin-top 56px
                    .subheading
                      text-align left
                      color #333333
                      font-weight 500
                      .attendance-statistics
                        float right
                        color #007AFF
                    .subheadingContent
                      overflow hidden
                      margin-top 8px
                      color #888888
                      p
                        float left
                        margin-right 30px
                  .roomData:first-child
                    margin 0px
                .examineContent
                  overflow auto
                  font-size 26px
                  font-weight 400
                  color rgba(136,136,136,1)
                  line-height 40px
                  border-bottom 2PX solid rgba(240,244,246,1)
                  padding 20px 0
                  .examineInfo
                    width 100%
                    float left
                    .lable-info
                      width 140px
                      color #888888
                      display inline-block
                      text-align justify
                      text-align-last justify
                    span
                      display inline-block
                      color #555555
                      flex 1
                    .active
                      color #1AB47F
                  .shenhe-info
                    display flex
                    .info
                      flex 1
                  .examineInfo:nth-child(1),.examineInfo:nth-child(2)
                    width 50%
                .examineContent:last-child
                  border-bottom 0PX solid rgba(240,244,246,1)
                .examineContent:nth-child(1)
                  padding-top 0
              & > .issue-box
                .issue-title
                  font-size 28px
                  font-weight 500
                  color #333333
                  line-height 40px
                  margin 0px 36px
      .control
        flex none
        padding 17px 41px
        box-shadow 0PX -4PX 13PX 0PX #6478A014
        display flex
        background-color #FFFFFF
        button
          flex 1
          height 86px
          line-height 86px
          background-color #007AFFFF
          font-size 30px
          font-weight 400
          color #FFFFFFFF
          box-sizing border-box
          border 1PX solid #007AFFFF
          margin 10px
          padding 0px
        .endMeetingBtn,
        .cancelMeetingBtn,
        .permissionTransferBtn,
        .responseStateBtn
          background-color #F5FAFF
          color #007AFF
          border 1PX solid #86C1FC
  .delegation-operation
    position absolute
    z-index 9
    width 100px
    height 100px
    background linear-gradient(148deg, rgba(92, 163, 255, 1) 0%, rgba(0, 122, 255, 1) 100%)
    box-shadow 3px 13px 15px 0px rgba(72, 134, 255, 0.36), 1px 3px 14px 0px rgba(72, 134, 255, 0.19)
    border-radius 50px
    bottom 28px
    right 90px
    line-height 100px
    text-align center
    color #FFFFFF
    font-size 28px
    font-weight 500
    i
      color #fff
      font-size 40px
    span
      position absolute
      left 72px
      top 0px
      height 34px
      border-radius 18px
      border 2px solid #fff
      color #fff
      line-height 34px
      font-size 22px
      font-weight 400
      background-color #FF506B
      padding 0 9px
  .mask
    position absolute
    width 100%
    height 100%
    z-index 999
    background rgba(0, 0, 0, 0.5)
    transition 0.3
  .response-state
    height 100%