        .selected-delete
          width 60px
          height 97px
          line-height 97px
          i
            font-size 30px
            color #FF506B
          &:active
            i
              color lighten(#FF506B, 15%)
    .selected-control
      flex none
      line-height 98px
      text-align center
      font-size 28px
      font-weight 500
      color #FF506B
      border-top #E1E8EB 1px solid
      box-shadow 0px -3PX 3PX rgba(0, 0, 0, 0.05)
      &:active
        background #efefef
