        .selected-delete
          width 88px
          height 88px
          line-height 88px
          text-align right
          i
            font-size 30px
            color #979797
          &:active
            i
              color lighten(#FF506B, 15%)
    .selected-actions
      padding 20px 20px
      height 120px
      background #ffffff
      box-shadow 0 -4px 13px 0 rgba(100, 120, 160, 0.08)
      display flex
      button
        flex 1
        height 80px
        background #ffffff
        border-radius 4PX
        border 1PX solid #86C1FC
        margin 0 15px
        font-size 30px
        font-weight 500
        &.clear          
          color #007AFF
          background #F5FAFF
          border 1PX solid #86C1FC
        &.submit
          color #ffffff
