.selected-box
  position absolute
  top 0px
  left 0px
  right 0px
  bottom 0px
  background-color rgba(0, 0, 0, .5)
  z-index 999
  .selected-container
    position absolute
    right 0px
    left 0px
    bottom 0px
    height 75%
    background-color #FFFFFF
    display flex
    flex-direction column
    .selected-header
      position relative
      flex none
      line-height 100px
      background-color #ffffff
      font-size 36px
      font-weight 500
      color #000000
      display flex
      text-align center
      .header-content
        flex 1
        padding 0 35px
        span
          color #007AFF
      .close
        position absolute
        top 10px
        right 35px
        height 80px
        width 80px
        line-height 80px
        text-align right
        .iconfont
          color #000000
          font-size 35px
    .selected-main
      flex 1
      padding 0
      overflow hidden
      overflow-y auto
      .selected-list
        margin 0 35px
        line-height 88px
        border-bottom 1PX solid $border-gray-color
        display flex
        .selected-name
          flex 1
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
          font-size 28px
          font-weight 400
          color #666666 
        .selected-number
          flex 1
        .selected-equipment
          flex 1
          display flex
          align-items center
          .equipment
            flex 1
            margin-right 12px
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
