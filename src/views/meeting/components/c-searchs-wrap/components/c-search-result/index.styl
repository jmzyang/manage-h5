.searchs-content
  display flex
  flex 1
  flex-direction column
  background-color #FFFFFF
  overflow hidden
  .header
    padding 40px 30px 30px 30px
    display flex
    flex none
    box-shadow 0PX 4PX 10PX 0PX #6478A00D
    .back
      color #007AFF
      font-size 32px
      line-height 60px
      // margin-right 12px
      width 145px
    .arrow-left
      font-size 40px
      vertical-align middle
      padding-right 10px
    .icons
      line-height 60px
      // margin-left 21px
      width 80px
      font-weight 500
      font-size 32px
      color #007AFF
    .input-content
      flex 1
      height 62px
      line-height 62px
      background #F6F7F8
      border-radius 30px
      color #A9A9A9
      font-size 28px
      padding 0 20px
      cursor text
      display flex
      .icon-search
        font-size 32px
        vertical-align middle
        margin-right 10px
      input
        flex 1
        border none
        background #F6F7F8
        line-height 1
  .result-main-scroll
    flex 1
    overflow hidden
    background-color #ffffff
    .result-main
      font-size 28px
      padding 20px 20px 0 20px
      .list-item
        border-bottom #E1E8EB 1PX solid
        margin-right 20px
        &.search-list-title
          color #333333
          height 60px
          font-size 30px
          font-weight bold
