.issue-box
  flex 1
  display flex
  flex-direction column
  box-sizing border-box
  font-weight 400
  position relative
  .text-red
    color #ff3030
  .grow
    width 0
    flex-grow 1
    text-align center
    color #333333
    font-size 36px
    line-height 60px
    font-weight bold
  .sure
    color #007AFF
    font-size 32px
    line-height 60px
    font-weight 500
    padding-right 30px
    position absolute
    right 0px
  .issue-container
    flex 1
    height 0
    padding 0
    display flex
    flex-direction column
    & > .issue-main
      flex 1
      height 0
      display flex
      flex-direction column
      position relative
      overflow hidden
      .no-issue
        text-align center
        position absolute
        top 40%
        left 50%
        transform translate(-50%, -50%)
        .empty-img
          width 317px
          height 298px
          background url('~@/assets/images/meeting/no-issue.png') no-repeat center center
          background-size 100% 100%
          margin 0 auto
        .empty-content
          line-height 54px
          font-weight 500
          font-size 36px
          p
            color #979797
            font-size 25px
            line-height 38px
      .scroll-content
        flex 1
        height 0px
      .meeting-issue-box
        margin-bottom 20px
        & > div
          & > div
            padding-top 0px !important
            padding-bottom 0px !important
        .issue-right
          position relative
          border-left 2PX solid #E4EBF1
          margin 0px 40px 0px 45px
          .file-list-box
            margin 0px 40px 0px 45px
            background-color #F7FBFF
            .file-list
              padding 20px
              display flex
              border-bottom 1PX solid #E1E8EB
              .img 
                flex none
                width 88px
                height 88px
                display inline-block
                background url('~@/assets/images/public/txt.png') no-repeat center center
                background-size 100% 100%
              .doc,.DOC,.docx,.DOCX
                background-image url('~@/assets/images/public/word.png')
              .jpg,.JPG,.png,.PNG,.gif,.GIF,.bmp,.BMP,.pic,.PIC,.tif,.TIF
                background-image url('~@/assets/images/public/img.png')
              .rar,.RAR,.zip,.ZIP,.arj,.ARJ
                background-image url('~@/assets/images/public/zip.png')
              .wav,.WAV,.aif,.AIF,.au,.AU,.mp3,.MP3,.mp4,.MP4,.mp5,.MP5,.ram,.RAM,.wma,.WMA,.mmf,.MMF,.amr,.AMR,.aac,.AAC,.flac,.FLAC
                background-image url('~@/assets/images/public/wav.png')
              .avi,.AVI,.mpg,.MPG,.mov,.MOV,.swf,.SWF
                background-image url('~@/assets/images/public/mov.png')
              .pdf,.PDF
                background-image url('~@/assets/images/public/pdf.png')
              .ppt,.PPT
                background-image url('~@/assets/images/public/ppt.png')
              .xls,.XLS,.xlsx,.XLSX
                background-image url('~@/assets/images/public/xls.png')
              .losureContent
                flex 1;
                padding 6px 22px
                & > p:first-child
                  color #888888
                  font-size 26px
                  line-height 37px
                & > p:last-child
                  font-size 24px
                  color #B2B2B2
                  line-height 33px
              .download
                flex none
                color #007AFF
                font-size 26px
                position relative
                width 50px
                i
                  font-size 42px
                  vertical-align sub
                  margin-right 11px
                  position absolute
                  top 50%
                  left 50%
                  transform translate(-50%, -50%)
            & > .file-list:last-child
              border none
          .attendee
            color #666666
            font-size 26px
            line-height 36px
            margin 25px 40px 0px 45px
        .issue-btn
          text-align center
          margin-top 60px
          padding-bottom 30px
          & > button
            text-align center
            width 180px
            border 1PX solid rgba(0,122,255,1)
            border-radius 30px
            color #007AFF
            font-size 26px
            line-height 0px
            height 60px
            margin 0px 30px
          .sendNotice
            background-color #007AFF
            color #FFFFFF
            border none
.meetingDetails
  height 100%
  width 100%
  flex none
  .issue-container
    height 100%
    width 100%
    flex none
    & > .issue-main
      height 100%
      width 100%
      flex none
      .Notification
        margin-top 0px !important
        padding-bottom 15px !important
.button-add-issue
  position absolute
  top 0
  right 0
  height 62px
  width 62px
  text-align center
  color #1890FF