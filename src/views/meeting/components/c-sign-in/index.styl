.sign-in-container
  width 100%
  height 100%
  display flex
  flex-direction column
  position relative
  background-color #F6F7F8
  .sign-in-box
    height 0
    margin 20px
    background-color #fff
    border-top 1PX solid #E1E8EB
    position relative
    flex 1
    flex-direction column
    display flex
    .sign-theme
      flex none
      color #000
      padding 20px
      line-height 40px
      font-size 36px
      font-weight 500
      position relative
    .sign-main
      flex 1
      height 0px
      font-size 34px
      display flex
      flex-direction column
      .sign-head
        background-color #f5f5f5
        display flex
        padding 24px 0px
        & > div
          flex 1
          text-align center
          font-weight 500
      .scroll-content
        height 0px
        flex 1
        overflow hidden
        .scroll-transform
          min-height 100%
          .sign-list
            margin 0px 40px
          .sign-term
            display flex
            border-bottom 1PX solid #ddd
            padding 24px 0px
            & > div
              flex 1
              text-align center
              width 0px
              height 36px
              line-height 36px
              & > img
                height 100%
                width 70%
                margin 0 auto
              
              & > span
                color #1AB47F
    .sign-bottom
      flex none
      text-align center
      padding 20px
      display flex
      & > button
        width 0px
        flex 1
      & > button:first-child
        margin-right 40px