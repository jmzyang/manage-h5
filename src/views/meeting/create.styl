.meeting-create
  background #ffffff
.header-cancel
  position absolute
  display inline-block
  top 0
  left 0
  padding 0 30px
  height 88px
  line-height 88px
  font-size 34px
  font-weight 400
  color #4B9BFA
  &:active
    background lighten(#4B9BFA, 35%)
.meeting-create-form
  flex 1
  overflow-y auto
  .input-block
    width 100%
    border-bottom 16px solid #F6F7F8
    position relative
    &:nth-last-of-type(1)
      border-bottom none
      height 0
      flex-grow 1
    .chose-box
      padding 33px 0
      list-style: none
      white-space: nowrap
      font-size 12px
      padding-right .24rem
      overflow auto
      .chose-item
        display inline-block
        text-align: center
        margin 0 23px
        position: relative
        img 
            width  88px
            height 88px
            border-radius 8px
        &:first-of-type
          &:after
            content: ''
            position absolute
            height 10px
            width: 10px
            // background-color: red
            left 0
            top: 0
    .input-item
      padding 0 30px
      position relative
      &.active
        background-color #ECECEC
      &:nth-last-of-type(1)
        padding 0
        .input-item-con
          padding 0 30px
          border-bottom none
      .input-item-con
        position relative
        line-height 102px
        color #333333
        font-size 32px
        height 102px
        display flex
        border-bottom 1PX solid $border-gray-color
        .item-title
          flex none
          background-repeat no-repeat
          background-position left center
          background-size auto 40px
          padding-left 60px
          &.video-type
            background-image url('~@/assets/images/meeting/sh-text.png')
          &.starttime
            background-image url('~@/assets/images/meeting/sh-starttime.png')
          &.readinessTime
            background-image url('~@/assets/images/meeting/form-readiness-time.png')
          &.duration
            background-image url('~@/assets/images/meeting/form-duration.png')
          &.room
            // background-image url('~@/assets/images/meeting/form-room.png')
            padding-left 0px
          &.service-items
            background-image url('~@/assets/images/meeting/form-service-items.png')
          &.host
            background-image url('~@/assets/images/meeting/form-host.png')
          &.participants
            // background-image url('~@/assets/images/meeting/form-participants.png')
            padding-left 0px
          &.leader
            background-image url('~@/assets/images/meeting/form-participants.png')
          &.issues
            background-image url('~@/assets/images/meeting/form-issues.png')
          &.classification
            background-image url('~@/assets/images/meeting/form-classification.png')
          &.notice
            background-image url('~@/assets/images/meeting/form-notice.png')
          &.lock
            background-image url('~@/assets/images/meeting/meet-lock.png')
        .theme-input
          flex-grow 1
          font-size 28px
          padding 0
          border none
          height 100%
          text-align right
          top 0
          left 0
          background-color transparent
          /deep/.van-field__control
            text-align right
            padding-right 35px
          &.active 
            /deep/.van-field__control
              text-align left
          /deep/.van-field__body
            height 100%
        .input-con
          flex 1
          flex-grow 1
          text-align right
          color #66666
          font-size 28px
          text-overflow ellipsis
          overflow hidden
          white-space nowrap
          margin-left 100px
          &.detail 
            margin-left 0px
            text-align left
          .meet-state
            position absolute
            right 0
            top 0
            font-size 24px
            color #FF4D4D
            &:after
              content: ''
              height 10px
              width 10px
              position absolute
              left -15px
              top: 45px
              border-radius 50%
              background-color #FF4D4D 
          .arrow-right
            padding-left 10px
            font-size 14px
            vertical-align middle
          .note-mode
            float right
            color #666666
            line-height 50px
            height 50px
            background-color #F6F7F8
            border-radius 3px
            margin-top 30px
            margin-left 20px
            padding 0 20px
            border 1PX solid #F6F7F8
            &.active
              color #007AFF
              background-color #E7F2FF
              border 1PX solid rgba(0, 122, 255, 1)
        .tips
          position absolute
          line-height 22px
          color #FF3030
          font-size 22px
          z-index 2
          display block
          height 22px
          left 0
          bottom 4px
        /deep/.van-cell
          padding 0
        .radio-wrap
          width 0
          flex-grow 1
          .radio-group
            flex-grow 1
            display flex
            align-items center
            text-align right
            .van-radio
              width 0
              flex-grow 1
  .input-block:first-child
    .input-item:first-child
      padding 0 
      .input-item-con
        height auto
        span
          margin-left 30px
        textarea
          width 100%
          height 200px
          border none
          resize none
          padding 30px
          font-size 36px
          line-height 1.5
.commit-wrap
  flex none
  height 124px
  padding 20px 30px
  box-shadow 0px -4px 13px 0px rgba(100, 120, 160, 0.08)
  background-color #ffffff
  box-sizing border-box
  display flex
  button
    height 80px    
    border-radius 2PX
    text-align center
    line-height 80px
    color #ffffff
    border none
    font-size 30px
    &.reset
      flex 1
      width 262px
      margin-right 20px
      color #333333
      background-color #F6F7F8
      &:active
        background-color darken(#F6F7F8, 10%)
    &.submit
      flex 1
      color #ffffff
      background rgba(0, 122, 255, 1)
      box-shadow 0px 3px 8px 0px rgba(72, 134, 255, 0.19), 0px 4px 18px 0px rgba(72, 134, 255, 0.19)
      &:active
        background-color darken(rgb(0, 122, 255), 10%)
.btn-reset-form
  position absolute
  top 0
  right 15px
  // border 1PX solid #f44
  line-height 60px
  height 60px
  padding 0 40px
  font-weight 400
.meeting-extend
  width 720px
  background rgba(255, 255, 255, 1)
  box-shadow 0px -3px 16px 0px rgba(0, 0, 0, 0.15)
  border-radius 6px
  display flex
  flex-direction column
  overflow hidden
  .operation-extend
    border-top 1PX solid #E1E8EB
    display flex
    & > button
      flex 1
      border none
      height 100px
      line-height 100px
      font-size 30px
      font-weight 400
    & > button:last-child
      color #007AFF
      border-left 1PX solid #E1E8EB
  .selection-template
    overflow hidden
    .selection-template-main
      max-height 800px
      margin 10px
      height 100%
      overflow hidden
      overflow-y auto
    .selection-template-title
      font-size 32px
      text-align center
      margin-top 38px
      margin-bottom 20px
      .van-radio-group
        display inline-block
        vertical-align middle
        .van-radio
          display inline-block
          margin-left 30px 
.view-row
  height 1px
  background-color #E5E5E5
  margin: 0 30px 0 100px