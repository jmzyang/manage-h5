.scroll-transform
  position relative
.refresh-shell
  padding 20px 0px
  height 80px
.refresh-container,.load-container
  width 100%
  padding 20px 0px
  line-height 40px
  position absolute
  top -80px
  left 0
  .refresh-con
    position relative
    text-align center
    i
      font-size 20px
      position absolute
      left 240px
      top 0
    span
      display block
      width 40px
      height 40px
      position absolute
      left 240px
      top 0
      &:before
        content ''
        display block
        margin 0 auto
        width 15%
        height 25%
        background-color #1880fb
        border-radius 100%
        animation sk-circleFadeDelay 1.2s infinite ease-in-out both
      for row in 1..11
        &:nth-child({row+1})
          transform rotate(30deg * row)
          &:before
            animation-delay -1.1s + (0.1s * row)
.load-container
  top auto
  bottom 0px
  left 0
  background-color rgba(227, 227, 227, 0.4)
.shell
  top 0
@keyframes sk-circleFadeDelay
  0%, 39%, 100%
    opacity 0
  40%
    opacity 1